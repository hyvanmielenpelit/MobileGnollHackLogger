@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

<div class="text-center">
    <h1 class="display-4">GnollHack Account</h1>
    <h4 class="fw-light">Community Server for GnollHack Mobile App</h4>
    <p class="fw-light">Top Score Recording &bull; Bones Sharing &bull; NetHack Scoreboard Support &bull; Statistics</p>
    <hr class="separator" />
    
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <h5 style="margin-bottom:40px;">Thank you for registering a GnollHack account!</h5>
        <h1>Now The Last Step</h1>
    }
    else
    {
        <h2>Getting Started</h2>
        <h3>1. Create Account</h3>
        <p>Create an account on this site by <a href="/Identity/Account/Register">registering a user name</a>.</p>
    }
    <h3>2. Enter Credentials to the Mobile App</h3>
    <p>Enter the credentials to the GnollHack mobile app.</p>
    <p class="task-list">
        2.1. Go to <em>Settings</em>.<br />
        2.2. Locate the <em>Server Posting</em> section.<br />
        2.3. Enter your <em>User Name</em> and <em>Password</em> to the respective fields.<br />
        2.4. Enable <em>Post Top Scores</em> and/or <em>Post Bones Files</em>.
    </p>

    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <p style="font-style:italic;">(If you have already entered the credentials to the mobile app, you can ignore these instructions.)</p>
    }
</div>
